@model YapayAntenor.Models.EntityFramework.TBL_Beslenme
@{
    ViewBag.Title = "BeslenmeEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<h2>Tarif Ekleme Sayfası</h2>
<br />

@using (Html.BeginForm("BeslenmeEkle", "BeslenmeAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.LabelFor(x => x.BeslenmeBaslik)
    @Html.TextBoxFor(x => x.BeslenmeBaslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BeslenmeResim)
    @Html.TextBoxFor(x => x.BeslenmeResim, new { @class = "form-control", @Value = " RESİM URL EKLEYİNİZ..." })
    @*<input type="file" name="Resimler" formmethod="post" />*@
    <br />
    <br />
    @Html.LabelFor(x => x.BeslenmeTarih)
    @Html.TextBoxFor(x => x.BeslenmeTarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.TBL_Admin.AdminID)
    @Html.DropDownListFor(x => x.BeslenmeYazar, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BeslenmeAciklama)
    @Html.TextAreaFor(x => x.BeslenmeAciklama, new { @class = "form-control", id = "summernote" })
    <br />
    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.BeslenmeID)
    <button class="btn btn-success">EKLE</button>
}

<script>
    $('#summernote').summernote({
        placeholder: 'Açıklama...',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });

</script>