
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-section set-bg" data-setbg="/web/img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>HAKKIMIZDA</h2>
                    <div class="bt-option">
                        <a href="/Home/Index/">Anasayfa</a>
                        <span>Hakkımızda</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- ChoseUs Section Begin -->
<section class="choseus-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Neden Bizi Seçmelisiniz?</span>
                    <h2>LİMİTLERİNİ SONUNA KADAR ZORLA!</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="cs-item">
                    <span class="flaticon-034-stationary-bike"></span>
                    <h4>Ücretsiz Bilgi</h4>
                    <p>
                        Bilgiyi uygularsanız büyürsünüz, paylaşırsanız efsane olursunuz.
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="cs-item">
                    <span class="flaticon-033-juice"></span>
                    <h4>Sağlıklı Beslenme Önerileri</h4>
                    <p>
                        Dünyanın en büyük zenginliği, beden sağlığından başka bir şey değildir.
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="cs-item">
                    <span class="flaticon-002-dumbell"></span>
                    <h4>Tecrübeli Antrenman Planları</h4>
                    <p>
                        Motivasyon “başlamanı” sağlar. Devam etmen için “alışkanlık” olmalı.
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="cs-item">
                    <span class="flaticon-014-heart-beat"></span>
                    <h4>İhtiyaçlarınızı Karşılamak</h4>
                    <p>
                        Fitness ile ilgili merak ettiğin her şeyi burada bulacaksın.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ChoseUs Section End -->
<!-- About US Section Begin -->
<section class="aboutus-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                <div class="about-video set-bg" data-setbg="/web/img/about-us.jpg">

                </div>
            </div>
            <div class="col-lg-6 p-0">
                <div class="about-text">
                    <div class="section-title">
                        <span>HAKKIMIZDA</span>
                        <h2>Neler Yaptık</h2>
                    </div>
                    <div class="at-desc">

                        @foreach (var x in Model)
                        {
                            <p>@x.HakkimizdaAciklama</p>
                        }

                    </div>
                    <div class="about-bar">
                        <div class="ab-item">
                            <p>Vücut Geliştirme</p>
                            <div id="bar1" class="barfiller">
                                <span class="fill" data-percentage="80"></span>
                                <div class="tipWrap">
                                    <span class="tip"></span>
                                </div>
                            </div>
                        </div>
                        <div class="ab-item">
                            <p>Beslenme Önerileri</p>
                            <div id="bar2" class="barfiller">
                                <span class="fill" data-percentage="85"></span>
                                <div class="tipWrap">
                                    <span class="tip"></span>
                                </div>
                            </div>
                        </div>
                        <div class="ab-item">
                            <p>Antrenman Programları</p>
                            <div id="bar3" class="barfiller">
                                <span class="fill" data-percentage="75"></span>
                                <div class="tipWrap">
                                    <span class="tip"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- About US Section End -->
