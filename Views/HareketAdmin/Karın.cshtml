@using YapayAntenor.Models.EntityFramework
@model List<TBL_Karin>
@{
    ViewBag.Title = "Karın";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/table2/css/util.css">
<link rel="stylesheet" type="text/css" href="~/table2/css/main.css">
<!--===============================================================================================-->
<br />
<h2>Karın Hareketleri Sayfası</h2>
<br />

<table class="table table-bordered">
    <tr style="background-color: #36304a; color: white;">
        <td>ID</td>
        <td>ADI</td>
        <td>GÖRSELİ</td>
        <td>AÇIKLAMASI</td>
        <td>SİL</td>
        <td>GUNCELLE</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.KarinID</th>
            <th>@x.KarinHareket</th>
            <th><img src="@x.KarinResim" style="width:100px; height:100px;" /></th>
            <th>@Html.Raw(x.KarinAciklama.Substring(0, 100)) ...</th>
            <th><a href="/HareketAdmin/KarınSil/@x.KarinID" class="btn btn-danger">SİL</a></th>
            <th><a href="/HareketAdmin/KarınGetir/@x.KarinID" class="btn btn-warning">GUNCELLE</a></th>
        </tr>
    }
</table>
<br />
<a href="/HareketAdmin/KarınEkle/" class="btn btn-info">Yeni Karın Hareketi Ekle</a>

