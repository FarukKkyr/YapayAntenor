@using YapayAntenor.Models.EntityFramework
@model List<TBL_Gogus>
@{
    ViewBag.Title = "Gogus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/table2/css/util.css">
<link rel="stylesheet" type="text/css" href="~/table2/css/main.css">
<!--===============================================================================================-->
<br />
<h2>Gogus Hareketleri Sayfası</h2>
<br />

<table class="table table-bordered">
    <tr style="background-color: #36304a; color: white;">
        <td>ID</td>
        <td>ADI</td>
        <td>GÖRSELİ</td>
        <td>AÇIKLAMASI</td>
        <td>SİL</td>
        <td>GUNCELLE</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.GogusID</th>
            <th>@x.GogusHareket</th>
            <th><img src="@x.GogusResim" style="width:100px; height:100px;" /></th>
            <th>@Html.Raw(@x.GogusAciklama.Substring(0, 100)) ...</th>
            <th><a href="/HareketAdmin/GogusSil/@x.GogusID" class="btn btn-danger">SİL</a></th>
            <th><a href="/HareketAdmin/GogusGetir/@x.GogusID" class="btn btn-warning">GUNCELLE</a></th>
        </tr>
    }
</table>
<br />
<a href="/HareketAdmin/GogusEkle/" class="btn btn-info">Yeni Göğüs Hareketi Ekle</a>