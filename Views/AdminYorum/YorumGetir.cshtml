@model YapayAntenor.Models.EntityFramework.TBL_Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yorum Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("YorumGuncelle", "AdminYorum", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(x => x.KullaniciAdi)
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yorum)
    @Html.TextBoxFor(x => x.Yorum, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.YorumID)
</div>

    <button class="btn btn-success"> Güncelle</button>
}

