@model YapayAntenor.Models.EntityFramework.TBL_Blog
@{
    ViewBag.Title = "BlogEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<br />
<h2>Blog Ekleme Sayfası</h2>
<br />

@using (Html.BeginForm("BlogEkle", "BlogAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    @Html.LabelFor(x => x.BlogBaslik)
    @Html.TextBoxFor(x => x.BlogBaslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogTarih)
    @Html.TextBoxFor(x => x.BlogTarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogAciklama)
    @Html.TextAreaFor(x => x.BlogAciklama, new { @class = "form-control", id = "summernote" })
    <br />
    @Html.LabelFor(x => x.TBL_Admin.AdminID)
    @Html.DropDownListFor(x => x.BlogYazar, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    @*@Html.TextBoxFor(x => x.BlogBaslik, new { @class = "form-control" })*@
    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control", @Value = " RESİM URL EKLEYİNİZ..." })
    @*<input type="file" name="BlogImage" />*@
    <br />
    <br />
    @Html.LabelFor(x => x.TBL_Kategori.KategoriID)
    @Html.DropDownListFor(x => x.BlogKategori, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    @*@Html.TextBoxFor(x => x.BlogKategori, new { @class = "form-control" })*@
    <br />
    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.BlogID)
    <button class="btn btn-success">Kaydet </button>
}


<script>
    $('#summernote').summernote({
        placeholder: 'Açıklama...',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });

</script>
